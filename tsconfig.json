{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./lib/esm",
    },
    "exclude": [
        "node_modules",
        "dist",
    ]
}
