{
    "compilerOptions": {
        "target": "es2016",
        "module": "ES2020",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "strict": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "types": ["vitest/globals"],
        "declaration": true,
    },
    "exclude": [
        "node_modules",
        "dist",
        "lib"
    ]
}
