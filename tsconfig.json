{
    "compilerOptions": {
        "target": "es2016",
        "module": "ESNext",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "./type-definitions",
    },
    "exclude": [
        "node_modules",
        "dist",
    ]
}
